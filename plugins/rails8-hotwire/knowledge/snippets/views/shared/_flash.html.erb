<%# app/views/shared/_flash.html.erb %>
<%# 플래시 메시지 표시 partial %>
<%#
  사용법:
    <%= render "shared/flash" %>

  Turbo Stream에서:
    <%= turbo_stream.update "flash", partial: "shared/flash" %>

  레이아웃에 추가:
    <div id="flash">
      <%= render "shared/flash" %>
    </div>
%>

<div data-controller="flash"
     data-flash-dismiss-after-value="5000"
     class="fixed top-4 right-4 z-50 space-y-2">

  <% flash.each do |type, message| %>
    <% next if message.blank? %>

    <%
      base_classes = "px-4 py-3 rounded-lg shadow-lg flex items-center justify-between min-w-[300px] animate-slide-in"
      type_classes = case type.to_sym
                     when :notice, :success
                       "bg-green-100 text-green-800 border border-green-200"
                     when :alert, :error
                       "bg-red-100 text-red-800 border border-red-200"
                     when :warning
                       "bg-yellow-100 text-yellow-800 border border-yellow-200"
                     else
                       "bg-blue-100 text-blue-800 border border-blue-200"
                     end
    %>

    <div data-flash-target="message"
         class="<%= base_classes %> <%= type_classes %>"
         role="alert">
      <span><%= message %></span>
      <button data-action="flash#dismiss"
              class="ml-4 text-current opacity-70 hover:opacity-100"
              aria-label="닫기">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd"
                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  <% end %>
</div>

<%# Stimulus 컨트롤러: flash_controller.js %>
<%#
import { Controller } from "@hotwired/stimulus"

export default class extends Controller {
  static targets = ["message"]
  static values = { dismissAfter: { type: Number, default: 5000 } }

  connect() {
    if (this.dismissAfterValue > 0) {
      this.timeout = setTimeout(() => this.dismissAll(), this.dismissAfterValue)
    }
  }

  disconnect() {
    if (this.timeout) clearTimeout(this.timeout)
  }

  dismiss(event) {
    event.currentTarget.closest("[data-flash-target='message']").remove()
  }

  dismissAll() {
    this.messageTargets.forEach(el => el.remove())
  }
}
%>
