# Rails 8 + Hotwire 권장 Gemfile

source "https://rubygems.org"
ruby "3.3.0"

gem "rails", "~> 8.0"
gem "pg"
gem "puma"
gem "thruster"

# 프론트엔드
gem "propshaft"
gem "importmap-rails"
gem "turbo-rails"
gem "stimulus-rails"
gem "tailwindcss-rails"

# Solid Stack
gem "solid_queue"
gem "solid_cache"
gem "solid_cable"

# 유틸리티
gem "pundit"
gem "pagy"
gem "faraday"
gem "kamal"

group :development, :test do
  gem "debug"
  gem "rspec-rails"
  gem "factory_bot_rails"
  gem "faker"
end

group :development do
  gem "web-console"
  gem "rubocop-rails-omakase"
  gem "annotate"
  gem "bullet"
end

group :test do
  gem "capybara"
  gem "cuprite"
  gem "shoulda-matchers"
end
