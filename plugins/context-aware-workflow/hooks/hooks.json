{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"hookSpecificOutput\":{\"hookEventName\":\"SessionStart\",\"additionalContext\":\"CAW (Context-Aware Workflow) plugin is active. Use /cw:status to check workflow state or /cw:start to begin a new task.\"}}'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PLUGIN_ROOT/hooks/scripts/check_plan_adherence.py\""
          },
          {
            "type": "command",
            "command": "python \"$CLAUDE_PLUGIN_ROOT/hooks/scripts/gemini_edit_review.py\""
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PLUGIN_ROOT/hooks/scripts/validate_commit_discipline.py\""
          },
          {
            "type": "command",
            "command": "python \"$CLAUDE_PLUGIN_ROOT/hooks/scripts/gemini_commit_review.py\""
          }
        ]
      }
    ]
  }
}
