{
  "hooks": {
    "Setup": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 -m pip install -r \"${CLAUDE_PLUGIN_ROOT}/scripts/requirements.txt\" --quiet"
          },
          {
            "type": "command",
            "command": "python3 -m playwright install chromium --with-deps 2>/dev/null || python3 -m playwright install chromium"
          }
        ]
      }
    ]
  }
}
